<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="164dp"
    tools:context=".HomeActivity"
    android:id="@+id/container"
    android:orientation="vertical"
    android:gravity="bottom|center_horizontal"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAudioNoteTitle"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:hint="Title"
        android:background="@android:color/transparent"
        android:visibility="invisible" />

    <com.legitdevs.legitnotes.CircledPulsatingButton
        android:id="@+id/btnRecord"
        android:layout_width="135dip"
        android:layout_height="135dip"
        custom:cpb_color="@color/colorAccent"
        custom:cpb_pressedRingWidth="40dip"
        android:src="@drawable/ic_keyboard_voice_white_24dp"
        android:layout_weight="2" />


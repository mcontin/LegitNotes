        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/creationDate"
            android:background="@android:color/transparent"
            android:layout_marginTop="15dp"
            android:inputType="textMultiLine|textCapSentences"
            android:gravity="top|left"
            android:hint="@string/new_text" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout_insert_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_overlay">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab_menu_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            fab:fab_addButtonColorNormal="@color/accent"
            fab:fab_addButtonColorPressed="@color/accent_dark"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_new_audio_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/accent_dark"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/my_icon"
                fab:fab_size="mini"
                fab:fab_title="One" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_new_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/accent_dark"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/ic_create_white_24dp"
                fab:fab_size="mini"
                fab:fab_title="New Note" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_quick_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/accent_dark"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/ic_note_add"
                fab:fab_size="mini"
                fab:fab_title="Quick Note" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </FrameLayout>

